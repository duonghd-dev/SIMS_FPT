@using SIMS_FPT.Models
@model IEnumerable<SubjectModel>

@{
    ViewData["Title"] = "List Subject";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .table-hover tbody tr:hover {
        background-color: #e3f2fd !important;
        transition: all 0.3s ease;
    }
</style>

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Subjects</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">Subjects</li>
                    </ul>
                </div>
                <div class="col-auto text-right float-right ml-auto">
                    <a asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-0 datatable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Department ID</th>
                                        <th>Credits</th>
                                        <th>Teachers</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.SubjectId</td>
                                                <td>
                                                    <h2><a>@item.SubjectName</a></h2>
                                                </td>
                                                <td>@item.DepartmentId</td>
                                                <td>@item.Credits</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.TeacherIds))
                                                    {
                                                        var teacherIds = item.TeacherIds.Split(',',
                                                        StringSplitOptions.RemoveEmptyEntries);
                                                        var teacherNames = ViewBag.TeacherNames as Dictionary<string, string>;
                                                        var teacherList = new List<string>();

                                                        @foreach (var teacherId in teacherIds)
                                                        {
                                                            var teacherName = teacherNames != null &&
                                                            teacherNames.ContainsKey(teacherId.Trim())
                                                            ? teacherNames[teacherId.Trim()]
                                                            : teacherId.Trim();
                                                            teacherList.Add(teacherName);
                                                        }

                                                        var count = teacherList.Count;
                                                        var tooltipText = string.Join("\n", teacherList);

                                                        <span class="badge badge-primary" data-toggle="tooltip" data-placement="top"
                                                            data-html="true" title="@string.Join("<br>", teacherList)"
                                                            style="cursor: help;">
                                                            <i class="fas fa-user-friends"></i> @count @(count == 1 ? "teacher" :
                                                                                                            "teachers")
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted"><i class="fas fa-user-slash"></i> No teachers
                                                            assigned</span>
                                                    }
                                                </td>
                                                <td class="text-right">
                                                    <div class="actions">
                                                        <a asp-action="Edit" asp-route-id="@item.SubjectId"
                                                            class="btn btn-sm bg-success-light mr-2">
                                                            <i class="fas fa-pen"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.SubjectId"
                                                            class="btn btn-sm bg-danger-light"
                                                            onclick="return confirm('Delete subject @item.SubjectName?');">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">No data found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}