@using SIMS_FPT.Models
@model SubjectModel

@{
    ViewData["Title"] = "Edit Subject";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Edit Subject</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="List">Subject</a></li>
                        <li class="breadcrumb-item active">Edit Subject</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <h5 class="form-title"><span>Subject Information</span></h5>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Subject ID</label>
                                        <input asp-for="SubjectId" class="form-control" readonly
                                            style="background-color:#e9ecef;">
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Subject Name</label>
                                        <input asp-for="SubjectName" class="form-control" required>
                                        <span asp-validation-for="SubjectName" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Department</label>
                                        <select asp-for="DepartmentId" class="form-control"
                                            asp-items="ViewBag.Departments" required>
                                            <option value="">-- Select Department --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Credits</label>
                                        <input asp-for="Credits" type="number" class="form-control" min="1" max="10"
                                            placeholder="1-10" required>
                                        <small class="form-text text-muted">Must be between 1 and 10</small>
                                        <span asp-validation-for="Credits" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Teachers</label>
                                        <input type="text" id="teacherSearch" class="form-control mb-2"
                                            placeholder="Search teachers by ID or name...">
                                        <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                                            <div id="noTeachersMessage" class="text-muted text-center"
                                                style="display: none;">
                                                Please select a department first
                                            </div>
                                            @if (ViewBag.AllTeachers != null)
                                            {
                                                var selectedIds = ViewBag.SelectedTeacherIds as List<string> ?? new
                                                List<string>();
                                                @foreach (var teacher in ViewBag.AllTeachers)
                                                {
                                                    var isSelected = selectedIds.Contains(teacher.Value);
                                                    <div class="form-check teacher-item" data-department="@teacher.DepartmentId"
                                                        style="display: none;">
                                                        <input class="form-check-input" type="checkbox"
                                                            name="SelectedTeacherIds" value="@teacher.Value"
                                                            id="teacher_@teacher.Value"
                                                            data-teacher-text="@teacher.Text.ToLower()" @(isSelected ? "checked" : "")>
                                                        <label class="form-check-label" for="teacher_@teacher.Value">
                                                            @teacher.Text
                                                        </label>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <small class="form-text text-muted">Select a department to see available
                                            teachers</small>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <a asp-action="List" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Filter teachers by department
            $('#DepartmentId').on('change', function () {
                var selectedDept = $(this).val();
                if (selectedDept) {
                    $('#noTeachersMessage').hide();
                    var hasTeachers = false;
                    $('.teacher-item').each(function () {
                        var teacherDept = $(this).data('department');
                        if (teacherDept === selectedDept) {
                            $(this).show();
                            hasTeachers = true;
                        } else {
                            $(this).hide();
                            // Uncheck teachers not in selected department
                            $(this).find('input[type="checkbox"]').prop('checked', false);
                        }
                    });
                    if (!hasTeachers) {
                        $('#noTeachersMessage').text('No teachers found in this department').show();
                    }
                } else {
                    $('.teacher-item').hide();
                    $('#noTeachersMessage').text('Please select a department first').show();
                }
                // Clear search
                $('#teacherSearch').val('');
            });

            // Search teachers
            $('#teacherSearch').on('keyup', function () {
                var searchText = $(this).val().toLowerCase();
                var selectedDept = $('#DepartmentId').val();
                if (!selectedDept) {
                    // Do not show teachers until a department is selected
                    return;
                }
                $('.teacher-item').each(function () {
                    var teacherDept = $(this).data('department');
                    if (teacherDept === selectedDept) {
                        var teacherText = $(this).find('input').data('teacher-text');
                        if (teacherText.indexOf(searchText) > -1) {
                            $(this).show();
                        } else {
                            $(this).hide();
                        }
                    } else {
                        $(this).hide();
                    }
                });
            });

            // Show teachers for current department on load
            var currentDept = $('#DepartmentId').val();
            if (currentDept) {
                $('#DepartmentId').trigger('change');
            } else {
                $('#noTeachersMessage').show();
            }
        });
    </script>
}