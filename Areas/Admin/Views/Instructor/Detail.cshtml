@using SIMS_FPT.Models
@model TeacherCSVModel
@{
    ViewData["Title"] = "Detail Teacher";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Teachers Details</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="ListTeacher">Teachers</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="about-info">
                            <h4>Profile</h4>
                            <div class="media mt-3">
                                <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? "/assets/img/default-avatar-1-32.svg" : Model.ImagePath)"
                                    class="mr-3 rounded-circle" alt="Avatar"
                                    style="width:100px;height:100px;object-fit:cover;"
                                    onerror="this.src='/assets/img/default-avatar-1-32.svg'">
                                <div class="media-body">
                                    <ul>
                                        <li><span class="title-span">Full Name : </span><span
                                                class="info-span">@Model.Name</span></li>
                                        <li><span class="title-span">Teacher ID : </span><span
                                                class="info-span">@Model.TeacherId</span></li>
                                        <li><span class="title-span">Mobile : </span><span
                                                class="info-span">@Model.Mobile</span></li>
                                        <li><span class="title-span">Email : </span><span
                                                class="info-span">@Model.Email</span></li>
                                        <li><span class="title-span">Gender : </span><span
                                                class="info-span">@Model.Gender</span></li>
                                        <li><span class="title-span">DOB : </span><span
                                                class="info-span">@Model.DateOfBirth?.ToString("dd MMM yyyy")</span>
                                        </li>
                                        <li><span class="title-span">Joining Date : </span><span
                                                class="info-span">@Model.JoiningDate?.ToString("dd MMM yyyy")</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <h5>Qualifications & Experience</h5>
                                    <p class="mt-3"><strong>Qualification:</strong> @Model.Qualification</p>
                                    <p><strong>Experience:</strong> @Model.Experience</p>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <h5>Address Details</h5>
                                    <p>@Model.Address, @Model.City</p>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-md-12 text-right">
                                    <a asp-action="EditTeacher" asp-route-id="@Model.TeacherId"
                                        class="btn btn-primary"><i class="fas fa-pen"></i> Edit</a>
                                    <a asp-action="ListTeacher" class="btn btn-secondary">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>