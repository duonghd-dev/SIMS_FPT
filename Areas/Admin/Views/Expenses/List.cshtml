@using SIMS_FPT.Models
@model IEnumerable<ExpenseModel>
@{
    ViewData["Title"] = "Expenses List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Expenses</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">Expenses</li>
                    </ul>
                </div>
                <div class="col-auto text-right float-right ml-auto">
                    <a asp-controller="Expenses" asp-action="Add" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-0 datatable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Item</th>
                                        <th>Qty</th>
                                        <th>Price</th>
                                        <th>Total</th>
                                        <th>Source</th>
                                        <th>Date</th>
                                        <th>By</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ExpenseId</td>
                                                <td>@item.ItemName</td>
                                                <td>@item.Quantity</td>
                                                <td>$@item.UnitPrice.ToString("N0")</td>
                                                <td class="font-weight-bold text-success">$@item.TotalAmount.ToString("N0")</td>
                                                <td>@item.Source</td>
                                                <td>@item.PurchaseDate.ToString("dd MMM yyyy")</td>
                                                <td>@item.PurchasedBy</td>
                                                <td class="text-right">
                                                    <div class="actions">
                                                        <a asp-controller="Expenses" asp-action="Edit"
                                                            asp-route-id="@item.ExpenseId"
                                                            class="btn btn-sm bg-success-light mr-2">
                                                            <i class="fas fa-pen"></i>
                                                        </a>
                                                        <a asp-controller="Expenses" asp-action="Delete"
                                                            asp-route-id="@item.ExpenseId" class="btn btn-sm bg-danger-light"
                                                            onclick="return confirm('Are you sure you want to delete this expense?');">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="9" class="text-center">No data found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>