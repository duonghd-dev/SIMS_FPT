@using SIMS_FPT.Models.ViewModels
@model ClassEnrollmentViewModel

@{
    ViewData["Title"] = "Manage Students";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Manage Students for Class: <span class="text-primary">@Model.ClassInfo.ClassName</span></h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="List">Classes</a></li>
                        <li class="breadcrumb-item active">Manage Students</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Add Students to Class</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="AddStudentsToClass" method="post">
                            <input type="hidden" name="classId" value="@Model.ClassInfo.ClassId" />
                            
                            @if (Model.AvailableStudents.Any())
                            {
                                <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th style="width: 50px;">Select</th>
                                                <th>ID</th>
                                                <th>Name</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var student in Model.AvailableStudents)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" name="selectedStudents" value="@student.StudentId" style="width: 20px; height: 20px;" />
                                                    </td>
                                                    <td>@student.StudentId</td>
                                                    <td>@student.FullName</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-success btn-block">
                                        <i class="fas fa-plus-circle"></i> Add Selected Students
                                    </button>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center">All students are already enrolled or no students available.</p>
                            }
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Enrolled Students (@Model.EnrolledStudents.Count)</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.EnrolledStudents.Any())
                        {
                            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th class="text-right">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var student in Model.EnrolledStudents)
                                        {
                                            <tr>
                                                <td>@student.StudentId</td>
                                                <td>@student.FullName</td>
                                                <td class="text-right">
                                                    <a asp-action="RemoveStudentFromClass" 
                                                       asp-route-classId="@Model.ClassInfo.ClassId" 
                                                       asp-route-studentId="@student.StudentId"
                                                       class="btn btn-sm btn-danger"
                                                       onclick="return confirm('Remove @student.FullName from this class?');">
                                                        <i class="fas fa-times"></i> Remove
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center">No students enrolled in this class yet.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>