@using SIMS_FPT.Models
@model StudentCSVModel
@{
    ViewData["Title"] = "Add Student";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Add Student</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="List">Students</a></li>
                        <li class="breadcrumb-item active">Add</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Add" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-12">
                                    <h5 class="form-title"><span>Basic Info</span></h5>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>First Name</label><input asp-for="FirstName"
                                            class="form-control" required></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Last Name</label><input asp-for="LastName"
                                            class="form-control" required></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Student ID</label><input asp-for="StudentId"
                                            class="form-control" required></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label>Gender</label>
                                        <select asp-for="Gender" class="form-control">
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Date of Birth</label><input asp-for="DateOfBirth"
                                            type="date" class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Class</label><input asp-for="ClassName"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Religion</label><input asp-for="Religion"
                                            class="form-control"></div>
                                </div>

                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Admission Date</label><input asp-for="AdmissionDate"
                                            type="date" class="form-control"></div>
                                </div>

                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Mobile</label><input asp-for="MobileNumber"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Admission No</label><input asp-for="AdmissionNumber"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Section</label><input asp-for="Section"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Student Image</label><input
                                            asp-for="StudentImageFile" type="file" class="form-control"></div>
                                </div>

                                <div class="col-12">
                                    <h5 class="form-title"><span>Parents Info</span></h5>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Father Name</label><input asp-for="FatherName"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Father Occu</label><input asp-for="FatherOccupation"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Father Mobile</label><input asp-for="FatherMobile"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Father Email</label><input asp-for="FatherEmail"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Mother Name</label><input asp-for="MotherName"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Mother Occu</label><input asp-for="MotherOccupation"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Mother Mobile</label><input asp-for="MotherMobile"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Mother Email</label><input asp-for="MotherEmail"
                                            class="form-control"></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Present Addr</label><textarea asp-for="Address"
                                            class="form-control"></textarea></div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group"><label>Permanent Addr</label><textarea
                                            asp-for="PermanentAddress" class="form-control"></textarea></div>
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>