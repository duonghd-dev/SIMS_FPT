@using SIMS_FPT.Models
@model IEnumerable<StudentCSVModel>

@{
    ViewData["Title"] = "Student List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Students List</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">Students</li>
                    </ul>
                </div>
                <div class="col-auto text-right float-right ml-auto">
                    <a asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i></a>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <form asp-action="List" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control" name="className" placeholder="Search by ID or Name..."
                            value="@ViewBag.SearchTerm">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">Search</button>
                            <a asp-action="List" class="btn btn-secondary ml-1">Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-0 datatable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>DOB</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.StudentId</td>
                                                <td>
                                                    <h2 class="table-avatar">
                                                        <a href="#" class="avatar avatar-sm mr-2">
                                                            <img class="avatar-img rounded-circle"
                                                                src="@(string.IsNullOrEmpty(item.ImagePath) ? "/assets/img/default-avatar-1-32.svg" : item.ImagePath)"
                                                                alt="Avatar"
                                                                onerror="this.src='/assets/img/default-avatar-1-32.svg'">
                                                        </a>
                                                        <a asp-action="Detail" asp-route-id="@item.StudentId">@item.FullName</a>
                                                    </h2>
                                                </td>
                                                <td>@item.Gender</td>
                                                <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                                <td class="text-right">
                                                    <div class="actions">
                                                        <a asp-action="Edit" asp-route-id="@item.StudentId"
                                                            class="btn btn-sm bg-success-light mr-2">
                                                            <i class="fas fa-pen"></i>
                                                        </a>

                                                        <a asp-action="DeleteStudent" asp-route-id="@item.StudentId"
                                                            class="btn btn-sm bg-danger-light"
                                                            onclick="return confirm('Bạn có chắc chắn muốn xóa sinh viên @item.FullName không?');">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">No students found matching your search.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>