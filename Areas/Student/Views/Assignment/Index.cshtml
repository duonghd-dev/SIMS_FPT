@model List<SIMS_FPT.Models.ViewModels.StudentAssignmentViewModel>
@{
    ViewData["Title"] = "My Assignments";
    Layout = "~/Areas/Student/Views/Shared/_StudentLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">My Assignments</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Assignments</li>
                    </ul>
                </div>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <div class="row filter-row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="get" asp-action="Index">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Subject</label>
                                        <select class="form-control" name="subjectId" asp-items="ViewBag.Subjects" onchange="this.form.submit()">
                                            <option value="">Select Subject</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Class</label>
                                        <select class="form-control" name="classId" asp-items="ViewBag.Classes">
                                            <option value="">Select Class</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <button type="submit" class="btn btn-primary btn-block">Search</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-0 datatable">
                                <thead>
                                    <tr>
                                        <th>Class</th>
                                        <th>Title</th>
                                        <th>Due Date</th>
                                        <th>Status</th>
                                        <th>Grade</th>
                                        <th class="text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model == null || Model.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">No assignments available.</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model)
                                        {
                                            bool isOverdue = !item.HasSubmission && DateTime.Now > item.Assignment.DueDate;
                                            <tr>
                                                <td>@item.ClassName</td>
                                                <td><strong>@item.Assignment.Title</strong></td>
                                                <td>
                                                    <span class="@(isOverdue ? "text-danger" : "")">
                                                        @item.Assignment.DueDate.ToString("dd/MM/yyyy HH:mm")
                                                    </span>
                                                </td>
                                                <td>
                                                    @if (item.HasSubmission)
                                                    {
                                                        <span class="badge badge-success">Submitted</span>
                                                        <div class="small text-muted">@item.SubmittedAt?.ToString("dd/MM HH:mm")</div>
                                                    }
                                                    else if (isOverdue)
                                                    {
                                                        <span class="badge badge-danger">Overdue</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning">Pending</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.HasGrade)
                                                    {
                                                        <span class="font-weight-bold text-primary">@item.Grade</span>
                                                    }
                                                    else
                                                    {
                                                        <span>--</span>
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    @if (item.HasSubmission)
                                                    {
                                                        <a asp-action="Submit" asp-route-id="@item.Assignment.AssignmentId" class="btn btn-sm btn-info">
                                                            <i class="fas fa-eye"></i> View/Edit
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="Submit" asp-route-id="@item.Assignment.AssignmentId" class="btn btn-sm btn-primary">
                                                            <i class="fas fa-upload"></i> Submit
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>