@model IEnumerable<SIMS_FPT.Models.Class>
@{
    ViewData["Title"] = "Available Courses";
    Layout = "~/Areas/Student/Views/Shared/_StudentLayout.cshtml"; // Giả sử bạn có layout cho student
    var enrolledIds = ViewBag.EnrolledClassIds as List<int>;
}

<div class="content container-fluid">
    <div class="page-header">
        <h3 class="page-title">Register for Classes</h3>
    </div>

    @if(TempData["Error"] != null) { <div class="alert alert-danger">@TempData["Error"]</div> }

    <div class="row">
        <div class="col-sm-12">
            <div class="card card-table">
                <div class="card-body">
                    <table class="table table-hover table-center mb-0 datatable">
                        <thead>
                            <tr>
                                <th>Class Name</th>
                                <th>Subject</th>
                                <th>Semester</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ClassName</td>
                                    <td>@(item.Subject?.SubjectName ?? item.SubjectId)</td>
                                    <td>@item.Semester</td>
                                    <td class="text-end">
                                        @if (enrolledIds != null && enrolledIds.Contains(item.Id))
                                        {
                                            <span class="badge bg-success">Enrolled</span>
                                        }
                                        else
                                        {
                                            <form asp-action="Enroll" method="post">
                                                <input type="hidden" name="classId" value="@item.Id" />
                                                <button type="submit" class="btn btn-primary btn-sm" onclick="return confirm('Join this class?');">
                                                    Enroll Now
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>