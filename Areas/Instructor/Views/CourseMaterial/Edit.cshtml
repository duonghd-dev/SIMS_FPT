@model SIMS_FPT.Models.CourseMaterialModel

@{
    ViewData["Title"] = "Edit Course Material";
    Layout = "~/Areas/Instructor/Views/Shared/_InstructorLayout.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Edit Course Material</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Instructor" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Materials</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ul>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="MaterialId" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SubjectId" class="form-label">Subject</label>
                        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects" id="SubjectId">
                            <option value="">-- Select Subject --</option>
                        </select>
                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ClassId" class="form-label">Class</label>
                        <select asp-for="ClassId" class="form-control" asp-items="ViewBag.Classes" id="ClassId">
                            <option value="">-- Select Subject First --</option>
                        </select>
                        <span asp-validation-for="ClassId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" class="form-label">Category</label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Current File</label>
                        @if (!string.IsNullOrEmpty(Model.FilePath))
                        {
                            <div class="mb-2">
                                <a href="~/@Model.FilePath" target="_blank" class="text-info"><i class="fas fa-file"></i> View Current File</a>
                            </div>
                        }
                        else
                        {
                            <div class="text-muted mb-2">No file uploaded.</div>
                        }

                        <label class="form-label">Replace File (Optional)</label>
                        <input type="file" name="uploadFile" class="form-control" />
                        <small class="text-muted d-block">Upload new file to replace the existing one.</small>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="VideoUrl" class="form-label">Video Link (YouTube)</label>
                <input asp-for="VideoUrl" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Re-use the AJAX logic for dependent dropdowns
            $('#SubjectId').change(function () {
                var subjectId = $(this).val();
                var classSelect = $('#ClassId');
                classSelect.empty();
                if (subjectId) {
                    classSelect.append('<option value="">Loading...</option>');
                    $.ajax({
                        url: '@Url.Action("GetClassesBySubject", "CourseMaterial", new { area = "Instructor" })',
                        type: 'GET',
                        data: { subjectId: subjectId },
                        success: function (data) {
                            classSelect.empty();
                            classSelect.append('<option value="">-- Select Class --</option>');
                            $.each(data, function (index, item) {
                                classSelect.append($('<option></option>').val(item.id).text(item.name));
                            });
                        },
                        error: function () {
                            classSelect.html('<option value="">Error loading classes</option>');
                        }
                    });
                } else {
                    classSelect.append('<option value="">-- Select Subject First --</option>');
                }
            });
        });
    </script>
}