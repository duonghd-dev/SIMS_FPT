@model SIMS_FPT.Models.CourseMaterialModel

@{
    ViewData["Title"] = "Add Course Material";
    Layout = "~/Areas/Instructor/Views/Shared/_InstructorLayout.cshtml";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Add Course Material</h3>
            <ul class="breadcrumb bg-transparent p-0">
                <li class="breadcrumb-item"><a asp-area="Instructor" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Materials</a></li>
                <li class="breadcrumb-item active">Add</li>
            </ul>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                <h5 class="card-title text-primary">New Material Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SubjectId" class="form-label font-weight-bold">Subject <span class="text-danger">*</span></label>
                                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects" id="SubjectId">
                                    <option value="">-- Select Subject --</option>
                                </select>
                                <span asp-validation-for="SubjectId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ClassId" class="form-label font-weight-bold">Class <span class="text-danger">*</span></label>
                                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.Classes" id="ClassId">
                                    <option value="">-- Select Subject First --</option>
                                </select>
                                <span asp-validation-for="ClassId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label asp-for="Title" class="form-label font-weight-bold">Title</label>
                                <input asp-for="Title" class="form-control" placeholder="e.g. Week 1 Slides - Introduction" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Category" class="form-label font-weight-bold">Category</label>
                                <input asp-for="Category" class="form-control" placeholder="e.g. Week 1, Lecture, Lab" />
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body">
                            <h6 class="text-muted text-uppercase mb-3 small font-weight-bold"><i class="fas fa-paperclip mr-2"></i> File Attachment</h6>
                            <div class="form-group mb-0">
                                <label class="form-label">Upload File (PDF/PPT/PPTX)</label>
                                <div class="custom-file">
                                    <input type="file" name="uploadFile" class="form-control p-1" style="height:auto;" />
                                    <small class="text-muted mt-2 d-block">
                                        <i class="fas fa-info-circle"></i> Supported formats: .pdf, .ppt, .pptx
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="VideoUrl" class="form-label font-weight-bold"><i class="fab fa-youtube text-danger mr-1"></i> Video Link (YouTube)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white"><i class="fas fa-link"></i></span>
                            </div>
                            <input asp-for="VideoUrl" class="form-control" placeholder="https://youtube.com/..." />
                        </div>
                        <span asp-validation-for="VideoUrl" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end pt-3 border-top">
                        <a asp-action="Index" class="btn btn-light mr-2">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4"><i class="fas fa-plus mr-1"></i> Add Material</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Check if SubjectId is already selected (e.g. error reload)
            var initialSubject = $('#SubjectId').val();
            if(!initialSubject) {
                $('#ClassId').html('<option value="">-- Select Subject First --</option>');
            }

            $('#SubjectId').change(function () {
                var subjectId = $(this).val();
                var classSelect = $('#ClassId');

                classSelect.empty();

                if (subjectId) {
                    classSelect.append('<option value="">Loading...</option>');
                    $.ajax({
                        url: '@Url.Action("GetClassesBySubject", "CourseMaterial", new { area = "Instructor" })',
                        type: 'GET',
                        data: { subjectId: subjectId },
                        success: function (data) {
                            classSelect.empty();
                            classSelect.append('<option value="">-- Select Class --</option>');
                            $.each(data, function (index, item) {
                                classSelect.append($('<option></option>').val(item.id).text(item.name));
                            });
                        },
                        error: function () {
                            classSelect.html('<option value="">Error loading classes</option>');
                        }
                    });
                } else {
                    classSelect.append('<option value="">-- Select Subject First --</option>');
                }
            });
        });
    </script>
}