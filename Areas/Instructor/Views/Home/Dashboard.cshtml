@{
    ViewData["Title"] = "Instructor Dashboard";
    Layout = "~/Areas/Instructor/Views/Shared/_InstructorLayout.cshtml";
}
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Instructor Dashboard</h1>
        <a asp-area="Instructor" asp-controller="Assignment" asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Create New Assignment
        </a>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Leave Balance</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.LeaveDaysRemaining Days</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Last Payslip</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.LastSalaryMonth</div>
                            <a asp-action="MyPayslips" class="text-xs text-success">View Details &rarr;</a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Assignments</div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <a asp-area="Instructor" asp-controller="Assignment" asp-action="Create" class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                        Create New &rarr;
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-cloud-upload-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Manage Grading</div>
                            <a asp-area="Instructor" asp-controller="Assignment" asp-action="Index" class="h5 mb-0 font-weight-bold text-gray-800">
                                View All
                            </a>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Paste the rest of your original Dashboard code here (Schedule, Charts, Scripts) *@

    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Today's Schedule</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Time</th>
                                    <th>Subject</th>
                                    <th>Class</th>
                                    <th>Room</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TodayClasses)
                                {
                                    <tr>
                                        <td class="font-weight-bold">@item.Time</td>
                                        <td>@item.SubjectName</td>
                                        <td>@item.ClassName</td>
                                        <td><span class="badge badge-secondary">@item.Room</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Student Performance Overview</h6>
                </div>
                <div class="card-body">
                    <div id="performanceChart"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/plugins/apexchart/apexcharts.min.js"></script>
    <script>
        var labels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.PerformanceLabels));
        var dataPoints = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.PerformanceData));
        var options = {
            series: [{ name: 'Class Average', data: dataPoints }],
            chart: { height: 350, type: 'area' },
            dataLabels: { enabled: false },
            stroke: { curve: 'smooth' },
            xaxis: { categories: labels },
            colors: ['#4e73df']
        };
        var chart = new ApexCharts(document.querySelector("#performanceChart"), options);
        chart.render();
    </script>
}