@* @model SIMS_FPT.Models.ViewModels.InstructorProfileViewModel *@

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Instructor Dashboard</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&amp;display=swap">
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
</head>

<body>
    <header class="sticky-top">
        <div class="header">
            <div class="header-left">
                <a asp-area="Instructor" asp-controller="Home" asp-action="Dashboard" class="logo">
                    <img src="~/assets/img/LogoFPT.png" alt="Logo">
                </a>
                <a asp-area="Instructor" asp-controller="Home" asp-action="Dashboard" class="logo logo-small">
                    <img src="~/assets/img/LogoFPT.png" alt="Logo" width="30" height="30">
                </a>
            </div>

            <a href="javascript:void(0);" id="toggle_btn">
                <i class="fas fa-align-left"></i>
            </a>

            <a class="mobile_btn" id="mobile_btn">
                <i class="fas fa-bars"></i>
            </a>

            <ul class="nav user-menu">
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" width="32" height="32"
                                src="@(string.IsNullOrEmpty(ViewBag.ProfileImage) ? Url.Content("~/assets/img/default-avatar-1-32.svg") : Url.Content(ViewBag.ProfileImage))"
                                alt="Profile Image">

                        </span>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="avatar avatar-sm">

                                <img class="rounded-circle" width="32" height="32"
                                    src="@(string.IsNullOrEmpty(ViewBag.ProfileImage) ? Url.Content("~/assets/img/default-avatar-1-32.svg") : Url.Content(ViewBag.ProfileImage))"
                                    alt="Profile Image">
                            </div>
                            <div class="user-text">
                                <h6>@User.Identity.Name</h6>
                                <p class="text-muted mb-0">Instructor</p>
                            </div>
                        </div>
                        <a class="dropdown-item" asp-area="Instructor" asp-controller="Home"
                            asp-action="Profile">Profile</a>
                        <a class="dropdown-item text-danger" asp-area="" asp-controller="Login"
                            asp-action="Logout">Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </header>

    @* --- SIDEBAR LOGIC --- *@
    @{
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    }

    <div class="sidebar" id="sidebar">
        <div class="sidebar-inner slimscroll">
            <div id="sidebar-menu" class="sidebar-menu">
                <ul>
                    <li class="menu-title">
                        <span>Main Menu</span>
                    </li>

                    @* Dashboard Link *@
                    <li class="@(currentController == "Home" && currentAction == "Dashboard" ? "active" : "")">
                        <a asp-area="Instructor" asp-controller="Home" asp-action="Dashboard">
                            <i class="fas fa-th-large"></i> <span>Dashboard</span>
                        </a>
                    </li>

                    @* [NEW] Profile Link in Sidebar *@
                    <li class="@(currentController == "Home" && currentAction == "Profile" ? "active" : "")">
                        <a asp-area="Instructor" asp-controller="Home" asp-action="Profile">
                            <i class="fas fa-user"></i> <span>My Profile</span>
                        </a>
                    </li>
                    <li class="menu-title">
                        <span>Academic</span>
                    </li>

                    @* Assignment Links *@
                    <li class="submenu @(currentController == "Assignment" ? "active" : "")">
                        <a href="#"><i class="fas fa-clipboard-list"></i> <span>Assignments</span> <span
                                class="menu-arrow"></span></a>
                        <ul>
                            <li>
                                <a asp-area="Instructor" asp-controller="Assignment" asp-action="Create"
                                    class="@(currentAction == "Create" ? "active" : "")">Create New</a>
                            </li>
                            <li>
                                <a asp-area="Instructor" asp-controller="Assignment" asp-action="Index"
                                    class="@(currentAction == "Index" ? "active" : "")">View All & Grade</a>
                            </li>
                        </ul>
                    </li>

                    <li class="@(currentController == "CourseMaterial" ? "active" : "")">
                        <a asp-area="Instructor" asp-controller="CourseMaterial" asp-action="Index">
                            <i class="fas fa-folder-open"></i> <span>Course Materials</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    @* --- MAIN CONTENT WRAPPER --- *@
    <div class="page-wrapper">
        <div class="content container-fluid">
            @RenderBody()
        </div>

        <footer>
            <div class="text-center p-3">
                <p>&copy; 2025 - SIMS_FPT</p>
            </div>
        </footer>
    </div>

    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>