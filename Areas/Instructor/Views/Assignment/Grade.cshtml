@model SIMS_FPT.Models.ViewModels.BulkGradeViewModel

@{
    ViewData["Title"] = "Grade Assignment";
    Layout = "~/Areas/Instructor/Views/Shared/_InstructorLayout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Grading: @Model.AssignmentTitle</h6>
        </div>
        <div class="card-body">

            @* 1. Add Validation Summary to see WHY it is not saving *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <strong>Unable to save changes:</strong>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }

            <form asp-action="Grade" method="post">
                @* 2. Hidden Fields to preserve data on Save *@
                <input type="hidden" asp-for="AssignmentId" />
                <input type="hidden" asp-for="AssignmentTitle" />

                @* CRITICAL FIX: Persist MaxPoints so it doesn't reset to 0 *@
                <input type="hidden" asp-for="MaxPoints" />

                <div class="form-check mb-4 p-3 bg-light border rounded">
                    <input class="form-check-input" type="checkbox" asp-for="IsPublished" id="publishToggle">
                    <label class="form-check-label font-weight-bold text-danger" for="publishToggle">
                        Publish Grades to Students?
                    </label>
                    <small class="form-text text-muted">
                        If checked, students will immediately see their grades and feedback.
                    </small>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="gradingTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th style="width: 20%">Student Name</th>
                                <th style="width: 15%">Submission</th>
                                <th style="width: 15%">Grade (Max: @Model.MaxPoints)</th>
                                <th style="width: 50%">Teacher Comments</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.StudentGrades.Count; i++)
                            {
                                <tr>
                                    @* 3. Bind properties for the list *@
                                    <input type="hidden" asp-for="StudentGrades[i].StudentId" />
                                    <input type="hidden" asp-for="StudentGrades[i].StudentName" />
                                    <input type="hidden" asp-for="StudentGrades[i].SubmissionFilePath" />
                                    <input type="hidden" asp-for="StudentGrades[i].HasSubmitted" />

                                    <td class="align-middle">
                                        @Model.StudentGrades[i].StudentName
                                        @if (!Model.StudentGrades[i].HasSubmitted)
                                        {
                                            <span class="badge badge-warning ml-2">No Submission</span>
                                        }
                                    </td>

                                    <td class="align-middle text-center">
                                        @if (!string.IsNullOrEmpty(Model.StudentGrades[i].SubmissionFilePath))
                                        {
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="PreviewSubmission"
                                                   target="_blank"
                                                   asp-route-assignmentId="@Model.AssignmentId"
                                                   asp-route-studentId="@Model.StudentGrades[i].StudentId"
                                                   class="btn btn-outline-primary">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                                <a asp-action="DownloadSubmission"
                                                   asp-route-assignmentId="@Model.AssignmentId"
                                                   asp-route-studentId="@Model.StudentGrades[i].StudentId"
                                                   class="btn btn-info">
                                                    <i class="fas fa-download"></i> Download
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted text-sm-center">-</span>
                                        }
                                    </td>

                                    <td class="align-middle">
                                        <div class="input-group">
                                            @* 4. Ensure min/max match the model limits *@
                                            <input type="number"
                                                   class="form-control"
                                                   asp-for="StudentGrades[i].Grade"
                                                   min="0"
                                                   max="@Model.MaxPoints"
                                                   step="0.1"
                                                   placeholder="-" />
                                        </div>
                                        <span asp-validation-for="StudentGrades[i].Grade" class="text-danger small"></span>
                                    </td>

                                    <td class="align-middle">
                                        <textarea class="form-control"
                                                  asp-for="StudentGrades[i].Feedback"
                                                  rows="2"
                                                  placeholder="Enter comments..."></textarea>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Save All Grades
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>