@model SIMS_FPT.Models.AssignmentModel

@{
    ViewData["Title"] = "Create Assignment";
    Layout = "~/Areas/Instructor/Views/Shared/_InstructorLayout.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Add Assignment</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Instructor" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-area="Instructor" asp-controller="Assignment" asp-action="Index">Assignments</a></li>
                <li class="breadcrumb-item active">Add Assignment</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-12">
                            <h5 class="form-title"><span>Assignment Details</span></h5>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label asp-for="SubjectId" class="form-label">Subject</label>
                                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects" id="SubjectId">
                                    <option value="">-- Select Subject --</option>
                                </select>
                                <span asp-validation-for="SubjectId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label asp-for="ClassId" class="form-label">Class</label>
                                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.Classes" id="ClassId">
                                    <option value="">-- Select Subject First --</option>
                                </select>
                                <span asp-validation-for="ClassId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label asp-for="Title" class="form-label">Assignment Title</label>
                                <input asp-for="Title" class="form-control" placeholder="e.g. Mid-term Project" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label asp-for="DueDate" class="form-label">Due Date & Time</label>
                                <input asp-for="DueDate" class="form-control" type="datetime-local"
                                       value="@(DateTime.Now.ToString("yyyy-MM-ddTHH:mm"))" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label asp-for="MaxPoints" class="form-label">Max Points</label>
                                <input asp-for="MaxPoints" class="form-control" type="number" value="100" />
                                <span asp-validation-for="MaxPoints" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label asp-for="AllowedFileTypes" class="form-label">Allowed File Types</label>
                                <select asp-for="AllowedFileTypes" class="form-control">
                                    <option value="">-- Select File Restrictions --</option>
                                    <option value=".pdf, .docx, .doc, .txt">Documents (.pdf, .docx, .txt)</option>
                                    <option value=".pdf">PDF Only (.pdf)</option>
                                    <option value=".zip, .rar, .7z">Archives (.zip, .rar, .7z)</option>
                                    <option value=".jpg, .jpeg, .png">Images (.jpg, .png)</option>
                                    <option value="*">All File Types</option>
                                </select>
                                <span asp-validation-for="AllowedFileTypes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter assignment instructions..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Check if SubjectId is already selected (e.g., on validation error reload)
            var initialSubject = $('#SubjectId').val();
            if(!initialSubject) {
                $('#ClassId').html('<option value="">-- Select Subject First --</option>');
            }

            $('#SubjectId').change(function () {
                var subjectId = $(this).val();
                var classSelect = $('#ClassId');

                classSelect.empty(); // Clear existing options

                if (subjectId) {
                    classSelect.append('<option value="">Loading...</option>');
                    $.ajax({
                        url: '@Url.Action("GetClassesBySubject", "Assignment", new { area = "Instructor" })',
                        type: 'GET',
                        data: { subjectId: subjectId },
                        success: function (data) {
                            classSelect.empty();
                            classSelect.append('<option value="">-- Select Class --</option>');
                            $.each(data, function (index, item) {
                                classSelect.append($('<option></option>').val(item.id).text(item.name));
                            });
                        },
                        error: function () {
                            classSelect.html('<option value="">Error loading classes</option>');
                        }
                    });
                } else {
                    classSelect.append('<option value="">-- Select Subject First --</option>');
                }
            });
        });
    </script>
}