@model IEnumerable<SIMS_FPT.Models.AssignmentModel>

@{
    ViewData["Title"] = "Assignments";
    Layout = "~/Areas/Instructor/Views/Shared/_InstructorLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">All Assignments</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Create New</a>
    </div>
    <div class="card-body">

        @* --- [NEW] Filter & Search Form --- *@
        <form asp-action="Index" method="get" class="mb-4">
            <div class="form-row align-items-end">
                @* Search Bar *@
                <div class="col-md-3 mb-2">
                    <label class="font-weight-bold text-secondary small">Search</label>
                    <input type="text" name="searchString" value="@ViewData["SearchString"]" class="form-control" placeholder="Search by title..." />
                </div>

                @* Subject Filter *@
                <div class="col-md-3 mb-2">
                    <label class="font-weight-bold text-secondary small">Subject</label>
                    <select name="subjectId" id="SubjectFilter" class="form-control" asp-items="ViewBag.Subjects">
                        <option value="">-- All Subjects --</option>
                    </select>
                </div>

                @* Class Filter (Dependent) *@
                <div class="col-md-3 mb-2">
                    <label class="font-weight-bold text-secondary small">Class</label>
                    <select name="classId" id="ClassFilter" class="form-control" asp-items="ViewBag.Classes">
                        <option value="">-- All Classes --</option>
                    </select>
                </div>

                @* Buttons *@
                <div class="col-md-2 mb-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-filter"></i> Filter</button>
                </div>
                <div class="col-md-1 mb-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100" title="Reset Filters"><i class="fas fa-undo"></i></a>
                </div>
            </div>
        </form>
        @* -------------------------------- *@

        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Title</th>
                        <th>Subject</th>
                        <th>Class</th> @* Added Class Column *@
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No assignments found matching your criteria.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="font-weight-bold text-dark">@item.Title</td>
                                <td><span class="badge badge-light border">@item.SubjectId</span></td>
                                <td>@item.ClassId</td> @* Display Class *@
                                <td>@item.DueDate.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    @if (item.AreGradesPublished)
                                    {
                                        <span class="badge badge-success">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Draft</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.AssignmentId" class="btn btn-info btn-sm mr-1" title="Edit">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a asp-action="Grade" asp-route-id="@item.AssignmentId" class="btn btn-warning btn-sm mr-1" title="Grade">
                                        <i class="fas fa-clipboard-check"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.AssignmentId" method="post" style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this assignment?') && confirm('Are you REALLY sure? This action cannot be undone.');">
                                        <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
             // Cascade Dropdown Logic
             $('#SubjectFilter').change(function() {
                var subjectId = $(this).val();
                var classSelect = $('#ClassFilter');
                classSelect.empty();

                if (subjectId) {
                    classSelect.append('<option value="">Loading...</option>');
                    // Call the Ajax endpoint
                    $.ajax({
                        url: '@Url.Action("GetClassesBySubject", "Assignment", new { area = "Instructor" })',
                        type: 'GET',
                        data: { subjectId: subjectId },
                        success: function(data) {
                            classSelect.empty();
                            classSelect.append('<option value="">-- All Classes --</option>');
                            $.each(data, function(i, item) {
                                classSelect.append($('<option>').val(item.id).text(item.name));
                            });
                        },
                        error: function() {
                            classSelect.empty();
                            classSelect.append('<option value="">Error loading classes</option>');
                        }
                    });
                } else {
                     classSelect.append('<option value="">-- All Classes --</option>');
                }
             });
        });
    </script>
}