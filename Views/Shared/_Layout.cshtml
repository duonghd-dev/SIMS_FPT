<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIMS FPT</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
</head>

<body class="d-flex flex-column min-vh-100">

    @{
        var showHeaderFooter = (ViewData["NoHeaderFooter"] as bool?) != true;
    }
    @if (showHeaderFooter)
    {
        <header class="sticky-top bg-white shadow-sm">
            <nav class="navbar navbar-expand-lg navbar-light py-3">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center fw-bold logo" asp-controller="Home" asp-action="Index">
                        @* <span class="text-fpt fs-3 me-2"><i class="fas fa-dragon"></i></span> *@
                        <div class="lh-1">
                            <img src="~/assets/img/LogoFPT.png" alt="Logo" class="me-2" style="height: 40px; width: auto;">
                            @* <span class="d-block text-dark text-uppercase ls-1">FPT University</span> *@
                            <small class="text-muted fs-7 fw-normal">Academic Portal</small>
                        </div>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNav">
                        <ul class="navbar-nav mx-auto mb-2 mb-lg-0 fw-medium">
                            <li class="nav-item">
                                <a class="nav-link px-3 active" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3" href="#">News</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3" href="#">Admissions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3" href="#">Students</a>
                            </li>
                        </ul>

                        <div class="d-flex align-items-center gap-2">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="dropdown">
                                    <a href="#" class="text-dark position-relative" data-bs-toggle="dropdown"
                                        style="margin-right: 15px;">
                                        <i class="far fa-bell fs-5"></i>
                                        <span
                                            class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-3">
                                        <li>
                                            <h6 class="dropdown-header">New Notifications</h6>
                                        </li>
                                        <li><a class="dropdown-item" href="#">Submit Assignment</a></li>
                                        <li><a class="dropdown-item" href="#">Upcoming Exam Schedule</a></li>
                                    </ul>
                                </div>

                                <div class="dropdown">
                                    <a href="#" class="d-flex align-items-center gap-2 text-decoration-none dropdown-toggle"
                                        data-bs-toggle="dropdown">
                                        @{
                                            var imagePath = User?.FindFirst("ImagePath")?.Value ??
                                            "/assets/img/default-avatar-1-32.svg";
                                        }
                                        <img src="@imagePath" class="rounded-circle" width="35" height="35" alt="Avatar">
                                        <div class="d-none d-lg-block px-2">
                                            <div class="fw-bold fs-7 text-dark">@(User?.Identity?.Name ?? "")</div>
                                        </div>
                                    </a>

                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-3">
                                        <li class="px-3 py-3 border-bottom">
                                            <div class="d-flex align-items-center gap-3">
                                                <img src="@imagePath" class="rounded-circle" width="45" height="45"
                                                    alt="Avatar">
                                                <div>
                                                    <div class="fw-bold fs-7 text-dark">@User.Identity.Name</div>
                                                    <small
                                                        class="text-muted">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            @{
                                                var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
                                                string dashboardLink = role switch
                                                {
                                                    "Admin" => "/Admin/Home/Dashboard",
                                                    "Instructor" => "/Instructor/Home/Dashboard",
                                                    "Student" => "/Student/Home/Dashboard",
                                                    _ => "/"
                                                };
                                            }
                                            <a class="dropdown-item" href="@dashboardLink">
                                                <i class="fas fa-chart-line me-2"></i> Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-controller="Login" asp-action="Logout">
                                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <a class="btn btn-fpt btn-sm px-4" asp-controller="Login" asp-action="Login">Login</a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <main role="main" class="flex-shrink-0 p-0">
        @RenderBody()
    </main>

    @if (ViewData["NoHeaderFooter"] == null || (bool)ViewData["NoHeaderFooter"] == false)
    {
        <footer class="py-5 mt-auto">
            <div class="container">
                <div class="row g-4">
                    <div class="col-lg-4">
                        <h5 class="mb-3 text-fpt">FPT UNIVERSITY</h5>
                        <p class="small">
                            FPT University provides high-quality human resource training in the integration era,
                            equipping learners with global competitiveness.
                        </p>
                        <div class="d-flex gap-3 mt-3">
                            <a href="#"><i class="fab fa-facebook fa-lg"></i></a>
                            <a href="#"><i class="fab fa-youtube fa-lg"></i></a>
                            <a href="#"><i class="fab fa-tiktok fa-lg"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-6">
                        <h6>Explore</h6>
                        <ul class="list-unstyled small mt-3">
                            <li class="mb-2"><a href="#">About Us</a></li>
                            <li class="mb-2"><a href="#">Faculty</a></li>
                            <li class="mb-2"><a href="#">Facilities</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-2 col-6">
                        <h6>Students</h6>
                        <ul class="list-unstyled small mt-3">
                            <li class="mb-2"><a href="#">Information Portal</a></li>
                            <li class="mb-2"><a href="#">Blackboard</a></li>
                            <li class="mb-2"><a href="#">Digital Library</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-4">
                        <h6>Contact</h6>
                        <ul class="list-unstyled small mt-3">
                            <li class="mb-2">
                                <i class="fas fa-map-marker-alt me-2 text-fpt"></i>
                                Hoa Lac Hi-Tech Park, Thach That, Hanoi
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-phone me-2 text-fpt"></i>
                                024 7300 1866
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-envelope me-2 text-fpt"></i>
                                daihocfpt@fpt.edu.vn
                            </li>
                        </ul>
                    </div>
                </div>
                <hr class="border-secondary my-4">
                <div class="text-center small">
                    &copy; 2024 SIMS FPT Project. Designed by Students.
                </div>
            </div>
        </footer>
    }

    <script src="~/assets/js/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/assets/plugins/apexchart/apexcharts.min.js"></script>
    <script src="~/assets/plugins/apexchart/chart-data.js"></script>
    <script src="~/assets/plugins/simple-calendar/jquery.simple-calendar.js"></script>
    <script src="~/assets/js/calander.js"></script>
    <script src="~/assets/js/circle-progress.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>