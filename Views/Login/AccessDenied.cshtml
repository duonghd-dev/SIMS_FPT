@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3><i class="fas fa-exclamation-triangle"></i> Access Denied</h3>
                </div>
                <div class="card-body p-5">
                    <h4 class="text-danger mb-3">You do not have permission to access this resource.</h4>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        Go to Homepage
                    </a>

                    <a asp-controller="Users" asp-action="Login" class="btn btn-secondary ms-2">
                        Login with different account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>